<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorVerifyPhone"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Mobile OTP Login"
        android:textColor="#0091EA"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:hint="OTP"
        android:layout_marginTop="20dp"
        android:id="@+id/phoneLoginOtp_donor"
        android:textColor="@color/black"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/pgBar_phone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/phoneOtPNext_btn_donor"
        android:layout_marginTop="0dp"
        android:background="#0091EA"
        android:textColor="#FFFEFE"
        android:text="Login"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/phoneOtpResendbtn_donor"
        android:layout_marginTop="20dp"
        android:background="#DD2C00"
        android:textColor="#FFFEFE"
        android:text="Resend"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:textSize="20sp"
        android:id="@+id/phoneOtpTextview_donor"
        android:layout_marginTop="20dp"/>


</LinearLayout>