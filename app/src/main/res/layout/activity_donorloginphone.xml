<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0091EA"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Donorloginphone">

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Donor Login Phone"
        android:background="#fff"
        android:textSize="25sp"
        android:layout_marginTop="150dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify phone number"
            android:textSize="20sp"
            android:textColor="#0091EA"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <com.hbb20.CountryCodePicker
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:id="@+id/CCPphonetext_donor"/>
            <EditText
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:id="@+id/PhoneNotext_donor"
                android:inputType="number"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/btnphoneOTP_donor"
            android:background="#0091EA"
            android:layout_marginTop="20dp"
            android:text="Send OTP"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign Up"
            android:textAlignment="center"
            android:id="@+id/new_account_donor"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TableRow
                android:id="@+id/tblrow1_d_ph_login"
                android:layout_width="107dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#000000"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="OR"/>
            <TableRow
                android:id="@+id/tblrow2_d_ph_login"
                android:layout_width="107dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#000000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#EA431A"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/donorloginemail"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="#ffff"
            android:drawableLeft="@drawable/baseline_email_24"/>

    </LinearLayout>
</LinearLayout>
