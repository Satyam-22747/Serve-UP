<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:foregroundGravity="center"
    tools:context=".MainActivity">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Serve Up"
    android:textSize="65sp"
    android:fontFamily="sans-serif-condensed-medium"
    android:layout_marginTop="200dp"
    android:textColor="#FFAB00"
    android:textAlignment="center"
    android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="230dp"
        android:id="@+id/signem"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDD835"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:text="Signin using Email"
        android:textAlignment="center"
        android:textColor="#9C2323" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/signph"
        android:backgroundTint="#FDD835"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:text="Signin Using Phone"
        android:textAlignment="center"
        android:textColor="#9C2323" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OR"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/signnew"
        android:layout_marginTop="10dp"
        android:backgroundTint="#35C8FD"
        android:text="New user"
        android:textAlignment="center"
        android:textColor="#F8F8F9" />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>